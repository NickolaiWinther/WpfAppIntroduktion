<Window x:Class="WpfAppIntroduktion.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppIntroduktion"
        mc:Ignorable="d"
        Title="Opgave 1 WPF – Introduktion" Height="700" Width="350">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- #region buttons-->

        <Button x:Name="buttonOpg12"
                Content="Opgave 1.2" 
                HorizontalAlignment="Stretch" 
                VerticalAlignment="Stretch"
                Margin="10" Click="buttonOpg12_Click" />

        <Button x:Name="buttonOpg13"
                Content="Opgave 1.3" 
                HorizontalAlignment="Stretch" 
                VerticalAlignment="Stretch"
                Margin="10" 
                Grid.Row="1" Click="buttonOpg13_Click" />

        <Button x:Name="buttonOpg14"
                Content="Opgave 1.4" 
                HorizontalAlignment="Stretch" 
                VerticalAlignment="Stretch"
                Margin="10" 
                Grid.Row="2" Click="buttonOpg14_Click" />

        <Button x:Name="buttonOpg15"
                Content="Opgave 1.5" 
                HorizontalAlignment="Stretch" 
                VerticalAlignment="Stretch"
                Margin="10" 
                Grid.Row="3" Click="buttonOpg15_Click" />

        <Button x:Name="buttonOpg16"
                Content="Opgave 1.6" 
                HorizontalAlignment="Stretch" 
                VerticalAlignment="Stretch"
                Margin="10" 
                Grid.Row="4" Click="buttonOpg16_Click" />

        <Button x:Name="buttonOpg17"
                Content="Opgave 1.7" 
                HorizontalAlignment="Stretch" 
                VerticalAlignment="Stretch"
                Margin="10" 
                Grid.Row="5" Click="buttonOpg17_Click" />

        <Button x:Name="buttonOpg18"
                Content="Opgave 1.8" 
                HorizontalAlignment="Stretch" 
                VerticalAlignment="Stretch"
                Margin="10" 
                Grid.Row="6" />

        <Button x:Name="buttonOpg19"
                Content="Opgave 1.9" 
                HorizontalAlignment="Stretch" 
                VerticalAlignment="Stretch"
                Margin="10" 
                Grid.Row="7" />

        <Button x:Name="buttonOpg10"
                Content="Opgave 1.10" 
                HorizontalAlignment="Stretch" 
                VerticalAlignment="Stretch"
                Margin="10" 
                Grid.Row="8" />
        <ListBox x:Name="listBoxRes"
                 Grid.Column="1" 
                 HorizontalAlignment="Stretch" 
                 VerticalAlignment="Stretch" 
                 Margin="5" 
                 Grid.RowSpan="9"/>
        <!--#endregion-->

    </Grid>
</Window>
